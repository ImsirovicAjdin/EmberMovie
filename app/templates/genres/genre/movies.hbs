<ul class="rr-list">
    {{#each @model.movies as |movie|}}
    <li class="rr-list-item">
        {{@movie.title}} 
        <StarRating class="fr" @rating={{movie.rating}} @onClick={{on "click" "updateRating" this.movie}}/>
    </li>
    {{else}}
    <li class="tc">
        No {{@model.name}} movies yet, why don't you <a href="#"  {{on "click" this.addMovie}}>create one?</a>
    </li>
    {{/each}}
</ul>
<div class="rr-new-label">
    {{#if @isAddingMovie}}
    <form class="rr-inline-form" {{on "submit" this.saveMovie}}>
        <input type="text" class="rr-input" @value={{@newMovieTitle}} placeholder="New movie">
        <div class="rr-inline-form-group ml-auto">
            <button type="submit" class="rr-action-button" disabled={{this.isAddButtonDisabled}}>Add</button>
            <button type="button" class="rr-cancel-icon" {{on "click" this.cancelAddMovie}}>{{fa-icon "times"}}</button>
        </div>
    </form>
    {{else}}
    <label {{on "click" this.addMovie}}>
        {{fa-icon "plus"}}
        <span class="ml1">Add new movie</span>
    </label>
    {{/if}}
</div>