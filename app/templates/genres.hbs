<div class="rr-sidebar">
    <ul class="rr-list">
        {{#each @model as |genre|}}
        <li class="rr-list-item">
             <LinkTo @route="genres.genre" genre.id class="rr-band-link"> {{@genre.name}}
            <span class="rr-pointer">
            {{fa-icon "angle-right"}}
            </span> </LinkTo>
        </li>
        {{/each}}
    </ul>
    <div class="rr-new-label">
        {{#if @isAddingGenre}} 
        {{!-- <input type="text" class="rr-input" @value={{this.newGenreName}} placeholder="New Genre" >
        <button type="button" class="rr-action-button"  disabled={{this.isAddButtonDisabled}} {{on "click" this.saveGenre}}>
            Add
        </button>
        <button class="rr-cancel-icon" {{on "click" this.cancelAddGenre}}>
            {{fa-icon "times"}}
        </button> --}}
    <form class="rr-inline-form"  {{on "submit" this.saveGenre}}>
        <input type="text" class="rr-input" @value={{this.newGenreName}} placeholder="New band">
        <button type="submit" class="rr-action-button" disabled={{this.isAddButtonDisabled}}>Add</button>
        <button type="button" class="rr-cancel-icon" {{on "click" this.cancelAddGenre}}>{{fa-icon "times"}}</button>
    </form>
        {{else}}
        <label {{on "click" this.addGenre}}>
            {{fa-icon "plus"}}
            <span class="ml1">Add new Genre</span>
        </label>
        {{/if}}
    </div>
</div>
<div class="rr-main-panel">
    {{outlet}}
</div>